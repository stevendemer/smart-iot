generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EVReading {
  id                 Int      @id @default(autoincrement())
  minChargeLevel     Int
  durationStay       Int
  currentChargeLevel Int
  carBatteryCapacity Int
  createdAt          DateTime @default(now())
}

model WeatherForecast {
  id               Int      @id @default(autoincrement())
  temperature      Int
  directRadiation  Int
  diffuseRadiation Int
  isDay            Boolean  @default(true)
  cloudCover       Float
  forecastDate     String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model EnergyPrice {
  id        Int      @id @default(autoincrement())
  prices    Json[]
  today     String?
  tomorrow  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PVAccount {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  token      String
  expiration DateTime
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  readings   PVReading[]
}

model PVReading {
  id              Int     @id @default(autoincrement())
  inverterState   Int
  efficiency      Float
  activePower     Float
  reactivePower   Float
  devId           Int
  devTypeId       Int
  totalYield      Float
  totalInputPower Float
  runState        Boolean @default(false)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  // one-to-many relation
  account   PVAccount? @relation(fields: [accountId], references: [id])
  accountId Int?
}
